# Environment Configuration Example
# Customize these values according to your deployment needs

# FastAPI Configuration
API_TITLE="BSS Backend API"
API_DESCRIPTION="Bridge Security Solutions Backend API"
API_VERSION="0.1.0"

# Database Configuration
DB_USER=user
DB_PASSWORD=password
DB_NAME=app
DB_URL=postgres://$DB_USER:$DB_PASSWORD@localhost:5432/$DB_NAME
DB_SQL_LOGGING=false  # Enable SQL query logging

# CORS Configuration
CORS_ORIGINS='["*"]'  # Use * for all origins (development only) or comma-separated URLs like http://localhost:3000,https://example.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS='["*"]'  # Use * for all methods or comma-separated values like GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS='["*"]'  # Use * for all headers or comma-separated values

# Authentication Configuration
AUTH_SECRET=secret
AUTH_ALGORITHM=HS256  # JWT signing algorithm
AUTH_TOKEN_EXPIRE_MINUTES=30  # Token expiration time in minutes (must be > 0)
AUTH_MAX_LOGIN_ATTEMPTS=5  # Maximum failed login attempts before lockout (must be > 0)
AUTH_LOCKOUT_MINUTES=15  # Duration of account lockout in minutes (must be > 0)
AUTH_DEBUG=false  # Enable JWT debug logging

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1  # Database number for token blacklisting
REDIS_PASSWORD=  # Leave empty for no password
REDIS_DEBUG=false  # Enable Redis debug logging

# Email Configuration (Crash Reporting)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USERNAME=email@address
EMAIL_PASSWORD=app-password
EMAIL_FROM=no-reply@bridge.securitysolutions.com  # If empty, EMAIL_USERNAME will be used
EMAIL_TO=errors@bridgesecuritysolutions.com  # Comma-separated list of recipient emails

# E-Mail Error Rate Limiting
ERROR_DEBUG=false  # Enable debug logging for crash reporter
ERROR_RATE_LIMIT_PERIOD=300  # Rate limit period in seconds (must be > 0)
ERROR_RATE_LIMIT_COUNT=10  # Maximum number of error emails per period (must be > 0)

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_DATE_FORMAT="%Y-%m-%d %H:%M:%S"
