# .env example file
# Please customize this to your needs

# This is the Postgres connection information
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=app
DATABASE_URL=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@localhost:5432/$POSTGRES_DB
SQL_LOGGING=false
JWT_SECRET=secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty for no password

# Email Configuration for Crash Reporting
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=no-reply@bridgesecuritysolutions.com
TO_EMAILS=dev1@example.com,dev2@example.com

# Error Rate Limiting
ERROR_RATE_LIMIT_PERIOD=300  # 5 minutes in seconds
ERROR_RATE_LIMIT_COUNT=10    # Maximum number of emails per period